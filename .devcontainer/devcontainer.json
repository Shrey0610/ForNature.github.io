// For details, see https://aka.ms/devcontainer.json
{
	"name": "Node.js and Flask Dev Container",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
	"features": {
	  "ghcr.io/devcontainers/features/python:1": {
		"version": "3.10"
	  }
	},
	"forwardPorts": [3000, 9005, 9006],
	"postCreateCommand": "npm install && pip install -r requirements.txt",
	"customizations": {
	  "vscode": {
		"settings": {
		  "terminal.integrated.defaultProfile.linux": "bash"
		},
		"extensions": [
		  "ms-python.python",
		  "dbaeumer.vscode-eslint",
		  "esbenp.prettier-vscode",
		  "ms-azuretools.vscode-docker"
		]
	  }
	},
	"remoteUser": "vscode",
	"containerEnv": {
	  "PYTHONUNBUFFERED": "1"
	},
	"runArgs": ["--init"],
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
	"workspaceFolder": "/workspace",
	"portsAttributes": {
	  "3000": { "label": "React Frontend (Port 3000)" },
	  "9005": { "label": "Flask Backend (Port 9005)" },
	  "9006": { "label": "Flask Backend (Port 9006)" }
	}
  }
  